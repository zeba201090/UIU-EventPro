<script>
  function generateTimeSlots() {
    var timeSlotElement = document.getElementById('timeSlot');
    const selectedOption = timeSlotElement.options[timeSlotElement.selectedIndex].value;
    const st = parseInt(selectedOption.substring(0, 2));
    const et = parseInt(selectedOption.substring(10, 13));
    const startTime= st;
   
   

    const endTime = et+12;
    const interval = 1; 


    console.log(startTime);
    console.log(et);


    let timeSlots = [];
    let currentHour = startTime;


   
    while (currentHour<endTime) {
      timeSlot = `${currentHour}:00  - ${(currentHour + interval)}:00 `;
      timeSlots.push(timeSlot);
      currentHour += interval;
    } 
      

    timeSlotElement = document.getElementById('timeSlots');
    console.log(timeSlots);
    document.getElementById("timeSlots").innerHTML = timeSlots.join('<br />');
    myArrayInput.value = timeSlots.join(',');
  }
</script>



