const mongoose = require('mongoose');


const roomSchema = new mongoose.Schema({
  roomName: {
    type: String,
    required: true,
  },
  fee: { 
    type: String,
    
  },
  roomNumber: {
    type: String,
    required: true,
  },
  roomType: {
    type: String,
    required: true,
  },
  capacity: {
    type: Number,
    required: true,
  },
  openDays: {
    type: [String],
    // required: true
  },
  availableTime: {
    type: [String],
    // required: true
  },
  booking: {
    type: Boolean,
    default: false,
  },

  facilities: {
    type: [String],
  },
  
  bookedSlots: [{
    date: {
      type: [String],
      required: true
    },
    times: {
      type: [String],
      required: true
    }
  }]
});

const Room = mongoose.model('Room', roomSchema);

module.exports = Room;
