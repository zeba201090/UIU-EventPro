const mongoose = require('mongoose');


const roomSchema = new mongoose.Schema({
  roomName: {
    type: String,
    required: true,
  },
  roomNumber: {
    type: String,
    required: true,
  },
  roomType: {
    type: String,
    required: true,
  },
  capacity: {
    type: Number,
    required: true,
  },
  openDays: {
    type: [String],
    // required: true
  },
  availableTime: {
    type: [String],
    // required: true
  },
  booking: {
    type: Boolean,
    default: false,
  },

  facilities: {
    type: [String],
  },
  
  bookedSlots: {
    type: [String],
  }
});

const Room = mongoose.model('Room', roomSchema);

module.exports = Room;
